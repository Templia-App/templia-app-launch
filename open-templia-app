  <script>
    // Render icons
    window.addEventListener('DOMContentLoaded', () => {
      if (window.lucideCreateIcons) window.lucideCreateIcons();
    });

    /**
     * Deep linking strategy:
     * 1) Try to open the app via a deep link.
     * 2) If it fails (app not installed), fall back to web (or app store).
     *
     * IMPORTANT:
     * - Replace DEEP_LINK with your real deep link.
     * - If you eventually implement Universal Links/App Links, use those as the primary.
     */

    // Option A (Custom URL Scheme) - requires iOS/Android app config:
    // const DEEP_LINK = "templia://open";

    // Option B (Universal Link/App Link) - recommended:
    // Example format; you must configure apple-app-site-association + assetlinks.json
    // const DEEP_LINK = "https://www.templia.app/app/open";

    // For now, set a placeholder you can update:
    const DEEP_LINK = "templia://open";

    // Optional: app store fallback (fill these in when ready)
    const IOS_APP_STORE_URL = "";      // e.g. "https://apps.apple.com/app/idXXXXXXXXX"
    const ANDROID_PLAY_URL = "";       // e.g. "https://play.google.com/store/apps/details?id=com.yourapp"

    const openAppBtn = document.getElementById('openAppBtn');
    const note = document.getElementById('note');

    function isIOS() {
      return /iPhone|iPad|iPod/i.test(navigator.userAgent);
    }

    function isAndroid() {
      return /Android/i.test(navigator.userAgent);
    }

    function openDeepLink() {
      // Attempt open
      window.location.href = DEEP_LINK;

      // If app not installed, user stays in browser.
      // Use a short timeout and then fall back.
      setTimeout(() => {
        // If store URLs provided, route by platform; otherwise route to web app.
        if (isIOS() && IOS_APP_STORE_URL) {
          window.location.href = IOS_APP_STORE_URL;
          return;
        }
        if (isAndroid() && ANDROID_PLAY_URL) {
          window.location.href = ANDROID_PLAY_URL;
          return;
        }
        // Web fallback
        window.location.href = "/";
      }, 1400);
    }

    // Button click
    openAppBtn.addEventListener('click', (e) => {
      e.preventDefault();
      note.textContent = "Launching the app…";
      openDeepLink();
    });

    // Optional: auto-launch on mobile after a short delay
    // Uncomment if you want it to try automatically:
    // setTimeout(() => {
    //   if (isIOS() || isAndroid()) openDeepLink();
    // }, 700);
  </script>
